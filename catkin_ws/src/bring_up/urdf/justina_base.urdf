<?xml version="1.0" encoding="utf-8"?>
<robot name="justina_base">
    <!--
    Importacion de todos los elementos de personalizacion de Gazebo
  -->
  <gazebo reference="base_link">
    <material>Gazebo/Orange</material>
  </gazebo>
  <gazebo reference="laser_link">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="wheel_left">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="wheel_right">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="wheel_front">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="wheel_back">
    <material>Gazebo/Black</material>
  </gazebo>


  <!-- Import Rviz colors -->
  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
  <material name="blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>
  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  <material name="grey">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>
  <material name="orange">
    <color rgba="1.0 0.423529411765 0.0392156862745 1.0"/>
  </material>
  <material name="brown">
    <color rgba="0.870588235294 0.811764705882 0.764705882353 1.0"/>
  </material>
  <material name="red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>
  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>
  <!--
      BASE LINKS AND JOINTS
  -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.235" rpy="0 0 0"/>
      <geometry> <box size="0.42 0.42 0.2"/></geometry>
      <material name="orange"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.235" rpy="0 0 0"/>
      <geometry> <box size="0.42 0.42 0.2"/></geometry>
    </collision>
   <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="3.0"/>
      <inertia
        ixx="0.0541" ixy="0.0" ixz="0.0"
        iyy="0.0541" iyz="0.0"
        izz="0.0882"/>
    </inertial>
  </link>

  <link name="laser_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry> <box size="0.08 0.08 0.1"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry> <box size="0.08 0.08 0.1"/></geometry>
    </collision>
   <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia
        ixx="0.000136667" ixy="0.0" ixz="0.0"
        iyy="0.000136667" iyz="0.0"
        izz="0.000106667"/>
    </inertial>
  </link>
  
  <joint name="laser_connect" type="fixed">
    <origin xyz="0.1 0 0.44" />
    <parent link="base_link"/>
    <child link="laser_link"/>
  </joint>

  <link name="wheel_left">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry><cylinder length="0.04" radius="0.06"/></geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry><cylinder length="0.04" radius="0.06"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.25"/>
      <inertia
        ixx="0.000258333" ixy="0.0" ixz="0.0"
        iyy="0.000258333" iyz="0.0"
        izz="0.00045"/>
    </inertial>
  </link>
  
  <joint name="wheel_left_connect" type="fixed">
    <origin xyz="0 -0.24 0.065" />
    <parent link="base_link"/>
    <child link="wheel_left"/>
  </joint>
  
  
  <link name="wheel_right">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry><cylinder length="0.04" radius="0.06"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry><cylinder length="0.04" radius="0.06"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.25"/>
      <inertia
        ixx="0.000258333" ixy="0.0" ixz="0.0"
        iyy="0.000258333" iyz="0.0"
        izz="0.00045"/>
    </inertial>
  </link>

  <joint name="wheel_right_connect" type="fixed">
    <origin xyz="0 0.24 0.065" /> 
    <parent link="base_link"/>
    <child link="wheel_right"/>
  </joint>
  
  <link name="wheel_front">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry><cylinder length="0.04" radius="0.06"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry><cylinder length="0.04" radius="0.06"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.25"/>
      <inertia
        ixx="0.000258333" ixy="0.0" ixz="0.0"
        iyy="0.000258333" iyz="0.0"
        izz="0.00045"/>
    </inertial>
  </link>
  
  <joint name="wheel_front_connect" type="fixed">
    <origin xyz="0.24 0 0.065" rpy="0 0 1.5708"/> 
    <parent link="base_link"/>
    <child link="wheel_front"/>
  </joint>
  
  <link name="wheel_back">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry><cylinder length="0.04" radius="0.06"/></geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry><cylinder length="0.04" radius="0.06"/></geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.25"/>
      <inertia
        ixx="0.000258333" ixy="0.0" ixz="0.0"
        iyy="0.000258333" iyz="0.0"
        izz="0.00045"/>
    </inertial>
  </link>
  
  <joint name="wheel_back_connect" type="fixed">
    <origin xyz="-0.24 0 0.065" rpy="0 0 1.5708"/> 
    <parent link="base_link"/>
    <child link="wheel_back"/>
  </joint>


  <!-- hokuyo -->
  <gazebo reference="laser_link">
    <sensor type="ray" name="hokuyo_sensor">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>10</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>370</samples>
            <resolution>0.5</resolution>
            <min_angle>-1.570796</min_angle>
            <max_angle>1.570796</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.10</min>
          <max>10.0</max>
          <resolution>0.01</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <!-- Noise parameters based on published spec for Hokuyo laser
               achieving "+-30mm" accuracy at range < 10m.  A mean of 0.0m and
               stddev of 0.01m will put 99.7% of samples within 0.03m of the true
               reading. -->
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_hokuyo_controller" filename="libgazebo_ros_laser.so">
        <topicName>/scan</topicName>
        <frameName>laser_link</frameName>
      </plugin>
    </sensor>
  </gazebo>

</robot>
